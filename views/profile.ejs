  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1>Word of the Day:</h1>
      <h2 id="word-of-the-day"></h2>
    </div>

    <!-- <div class="row"> -->

    <!-- LOCAL INFORMATION -->
    <div class="col-sm-6">
      <!-- <div class="well"> -->
      <div class="first-box">
        <h3>User definitions:</h3>
        <ul class="messages"> <!-- These are all of the objects inside of the database collection as an array -->
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span>
                <%= messages[i].name %>
              </span>
              <span>
                <%= messages[i].word %>
              </span>
              <span>
                <%= messages[i].definition %>
              </span>
              <span>
                <%= messages[i].thumbUp %>
              </span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true" data-id="<%= messages[i]._id %>"></i></span>
              <!-- storing the ID of the object from MongoDB in order to update this specific message -->
              <span>
                <%= messages[i].thumbDown %>
              </span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true" data-id="<%= messages[i]._id %>"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true" data-id="<%= messages[i]._id %>"></i></span>
            </li>
            <% } %>
        </ul>
      </div>
      <div class='second-box'>
        <h3>Add a definition</h3>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input class = 'profile-selection' type="text" placeholder="name" name="name">
            <input class = 'profile-selection' type="text" placeholder="word" name="word">
            <input class = 'profile-selection' type="text" placeholder="definition" name="definition">
            <button class='profile-selection' type="submit">Submit Your Guess</button>
            <button class='profile-selection' type="button" id="refresh">New Word</button>
            <button class='profile-selection' type="button" id="definition-reveal">Reveal Definition</button>
          </form>
      </div>
      <% } %>
        <!-- <h3><span class="fa fa-user"></span> Local</h3> -->
        <!-- <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p> -->

        <!-- <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %> -->

    </div>
    <!-- </div> -->
    <!-- value="<%= user.local.email %>" -->
    <div id = "definition-box">
      <h4 id="word-definition" class="white"></h4>
    </div>
    <div id = "logout-box">
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

  </div>

  <script src="main.js"></script>

</body>

</html>